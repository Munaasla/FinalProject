@model Project.Models.VerifyCodeViewModel

@{
    ViewData["Title"] = "Verify Code";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">🔒 Enter Verification Code</h4>
                </div>
                <div class="card-body">
                    <p class="mb-3 text-muted">We sent a verification code to your email. Please enter it below.</p>
                    @if (!string.IsNullOrEmpty(ViewBag.Error))
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }
                    <form asp-action="VerifyCode" method="post">
                        <div class="mb-3">
                            <label asp-for="Code" class="form-label">Verification Code</label>
                            <input asp-for="Code" class="form-control" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="ContactInfo" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">✅ Verify</button>
                            <a href="javascript:history.back()" class="btn btn-outline-secondary">⬅ Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
