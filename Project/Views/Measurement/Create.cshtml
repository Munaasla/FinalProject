@model Project.Models.Measurement
@{
    ViewData["Title"] = "Add Measurement";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow p-4" style="max-width: 600px; width: 100%;">
        <div class="card-body">
            <h3 class="card-title text-center mb-4">📏 Add Monthly Measurement</h3>
            <form asp-action="Create" method="post">
                <input asp-for="BabyId" type="hidden" />
                <div class="mb-3">
                    <label asp-for="Date" class="form-label">📅 Date</label>
                    <input asp-for="Date" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Weight" class="form-label">⚖️ Weight (kg)</label>
                    <input asp-for="Weight" class="form-control" placeholder="Enter weight..." />
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Height" class="form-label">📏 Height (cm)</label>
                    <input asp-for="Height" class="form-control" placeholder="Enter height..." />
                    <span asp-validation-for="Height" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="NextMeasurementDate" class="form-label">⏭️ Next Measurement Date (optional)</label>
                    <input type="date" name="NextMeasurementDate" class="form-control" />
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">💾 Save</button>
                    @if (ViewBag.BabyId != null)
                    {
                        <a asp-controller="Baby" asp-action="Summary" asp-route-id="@ViewBag.BabyId" class="btn btn-secondary">⬅ Cancel</a>
                    }
                    else
                    {
                        <a href="javascript:history.back()" class="btn btn-secondary">⬅ Cancel</a>
                    }
                </div>
            </form>
            @section Scripts {
                @await Html.PartialAsync("_ValidationScriptsPartial")
            }
        </div>
    </div>
</div>


